@page "/counter"
@using Fampi.Core.Components
@using MudBlazor
@using Microsoft.AspNetCore.Components.Web
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<FampiPrimaryButton 
    ButtonOnClick="@(EventCallback.Factory.Create<Microsoft.AspNetCore.Components.Web.MouseEventArgs>(this, IncrementCount))">
    Click me
    </FampiPrimaryButton>

    @code {
        private int currentCount = 0;

        private void IncrementCount()
        {
            currentCount++;
        }
    }
                                